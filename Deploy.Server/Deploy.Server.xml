        <member name="M:Deploy.Server.Controllers.UserController.PostUserAsync(Deploy.Core.User)">
             <summary>
             Add user to database
             </summary>
             <param name="user">User to add</param>
             <returns>A newly created User</returns>
             <remarks>
             Sample request:
            
                 POST /create
                 {
                    "Name": "Mikhail",
                    "Age": 69
                 }
            
